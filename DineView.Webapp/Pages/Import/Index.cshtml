@page
@model DineView.Webapp.Pages.Import.IndexModel

<h3>Import dishes</h3>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="border border-3 border-danger p-3">
        <p class="mb-0">@Model.ErrorMessage</p>
    </div>
}

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="border border-3 p-3 border-info">
        <p class="mb-0">@Model.Message</p>
    </div>
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Load CSV</h5>
        <p class="card-text">
            Upload a csv file with the following header line:
            Id&rarr;Name&rarr;Description&rarr;Calories&rarr;PreparationTime&rarr;Category
            <br />
            Encoding: UTF 8 w/o BOM, Separator: TAB, Line break: CR+LF
        </p>
    </div>
    <form method="post" enctype="multipart/form-data" asp-page-handler="CsvImport">
        <input class="form-control" type="file" asp-for="UploadedFile" />
        <button type="submit" class="mt-3 btn btn-primary">Upload</button>
    </form>
</div>
<br />
